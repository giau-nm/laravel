<?php $media_view = Cookie::get('media_view'); ?>

<?php if(isset($media_view) && ($media_view == 'grid_large' || $media_view == 'grid')): ?>

	<?php if($media_view == 'grid'){ $column = 'col-sm-4'; } else { $column = 'col-sm-6'; } ?>

	<?php echo $__env->make('includes.media_grid', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
<?php else: ?>
	<?php echo $__env->make('includes.media_list', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>
<?php endif; ?>